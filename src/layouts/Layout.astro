---
export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Stay updated with the latest news", image = "/favicon.svg" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={image} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gray-950 text-gray-100 font-['JetBrains_Mono','Courier_New',monospace] min-h-screen overflow-x-hidden">
    <!-- Animated cyber background -->
    <div class="fixed inset-0 bg-gradient-to-br from-gray-950 via-blue-950 to-gray-900"></div>
    <div class="fixed inset-0 opacity-10">
      <div class="absolute inset-0 bg-[linear-gradient(90deg,rgba(0,255,150,0.1)_1px,transparent_1px)] bg-[length:50px_50px]"></div>
      <div class="absolute inset-0 bg-[linear-gradient(0deg,rgba(0,255,150,0.1)_1px,transparent_1px)] bg-[length:50px_50px]"></div>
    </div>
    <div class="fixed inset-0 bg-gradient-to-t from-transparent via-transparent to-green-500/5 animate-pulse"></div>
    <header class="relative bg-gray-900/80 backdrop-blur-md border-b border-green-500/20 shadow-lg shadow-green-500/10 sticky top-0 z-50">
      <div class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gradient-to-r from-green-400 to-blue-500 rounded-lg flex items-center justify-center shadow-lg shadow-green-500/30 animate-pulse">
              <span class="text-black font-bold text-lg">P</span>
            </div>
            <h1 class="text-2xl font-bold bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 bg-clip-text text-transparent drop-shadow-lg">
              <a href="/" class="hover:text-green-300 transition-all duration-300 hover:drop-shadow-[0_0_10px_rgba(0,255,150,0.5)]">PetiKVX</a>
            </h1>
          </div>

          <nav class="hidden md:flex">
            <ul class="flex space-x-8">
              <li><a href="/" class="text-gray-300 hover:text-green-400 font-medium transition-all duration-300 relative group text-sm tracking-wider">HOME
                <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-green-400 to-blue-500 group-hover:w-full transition-all duration-300"></span></a></li>
              <li><a href="/articles" class="text-gray-300 hover:text-green-400 font-medium transition-all duration-300 relative group text-sm tracking-wider">ARTICLES
                <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-green-400 to-blue-500 group-hover:w-full transition-all duration-300"></span></a></li>
              <li><a href="/about" class="text-gray-300 hover:text-green-400 font-medium transition-all duration-300 relative group text-sm tracking-wider">ABOUT
                <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-green-400 to-blue-500 group-hover:w-full transition-all duration-300"></span></a></li>
            </ul>
          </nav>

          <!-- Mobile menu button -->
          <button class="md:hidden p-2 rounded-lg hover:bg-gray-800 transition-colors border border-green-500/30" id="mobile-menu-button">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile menu -->
        <div class="md:hidden mt-4 pb-4 border-t border-green-500/20 hidden" id="mobile-menu">
          <ul class="flex flex-col space-y-3 pt-4">
            <li><a href="/" class="text-gray-300 hover:text-green-400 font-medium block py-2 text-sm tracking-wider">HOME</a></li>
            <li><a href="/articles" class="text-gray-300 hover:text-green-400 font-medium block py-2 text-sm tracking-wider">ARTICLES</a></a></li>
            <li><a href="/about" class="text-gray-300 hover:text-green-400 font-medium block py-2 text-sm tracking-wider">ABOUT</a></li>
          </ul>
        </div>
      </div>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="relative bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 text-white py-12 mt-16 border-t border-green-500/20">
      <div class="absolute inset-0 bg-gradient-to-t from-green-500/5 to-transparent"></div>
      <div class="relative container mx-auto px-4">
        <div class="grid md:grid-cols-4 gap-8">
          <div class="md:col-span-2">
            <div class="flex items-center space-x-3 mb-4">
              <div class="w-8 h-8 bg-gradient-to-r from-green-400 to-blue-500 rounded-lg flex items-center justify-center shadow-lg shadow-green-500/30">
                <span class="text-black font-bold">P</span>
              </div>
              <h3 class="text-xl font-bold bg-gradient-to-r from-green-400 to-blue-400 bg-clip-text text-transparent">PetiKVX</h3>
            </div>
            <p class="text-gray-300 leading-relaxed mb-4 font-mono text-sm">
              Cybersecurity researcher specialized in malware analysis and open source tool development.
              Sharing knowledge and research for better understanding of cyber threats.
            </p>
            <div class="flex space-x-4">
              <a href="https://x.com/petikvx" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center hover:bg-green-500/20 transition-all duration-300 border border-green-500/30 hover:border-green-400 hover:shadow-lg hover:shadow-green-500/20">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
              </a>
              <a href="https://github.com/petikvx" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center hover:bg-green-500/20 transition-all duration-300 border border-green-500/30 hover:border-green-400 hover:shadow-lg hover:shadow-green-500/20">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
              </a>
              <a href="https://petikvx.github.io" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center hover:bg-green-500/20 transition-all duration-300 border border-green-500/30 hover:border-green-400 hover:shadow-lg hover:shadow-green-500/20">
                <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
                </svg>
              </a>
            </div>
          </div>

          <div>
            <h4 class="text-lg font-semibold mb-4 text-green-400 font-mono">NAVIGATION</h4>
            <ul class="space-y-2">
              <li><a href="/" class="text-gray-400 hover:text-green-400 transition-colors font-mono text-sm">HOME</a></li>
              <li><a href="/articles" class="text-gray-400 hover:text-green-400 transition-colors font-mono text-sm">ARTICLES</a></li>
              <li><a href="/about" class="text-gray-400 hover:text-green-400 transition-colors font-mono text-sm">ABOUT</a></li>
              <li><a href="/contact" class="text-gray-400 hover:text-green-400 transition-colors font-mono text-sm">CONTACT</a></li>
            </ul>
          </div>

          <div>
            <h4 class="text-lg font-semibold mb-4 text-green-400 font-mono">RESOURCES</h4>
            <ul class="space-y-2">
              <li><a href="/privacy" class="text-gray-400 hover:text-green-400 transition-colors font-mono text-sm">PRIVACY</a></li>
              <li><a href="/terms" class="text-gray-400 hover:text-green-400 transition-colors font-mono text-sm">TERMS</a></li>
              <li><a href="/cookies" class="text-gray-400 hover:text-green-400 transition-colors font-mono text-sm">COOKIES</a></li>
            </ul>
          </div>
        </div>

        <div class="border-t border-green-500/20 mt-8 pt-8 text-center">
          <p class="text-gray-500 font-mono text-sm">&copy; 2025 PetiKVX. All rights reserved.</p>
          <div class="mt-2 text-xs text-gray-600 font-mono">
            <span class="inline-block animate-pulse">01001101 01100001 01100100 01100101 00100000 01110111 01101001 01110100 01101000 00100000 01010000 01100001 01110011 01110011 01101001 01101111 01101110</span>
          </div>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>