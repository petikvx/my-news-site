---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Fonction pour générer les chemins statiques
export async function getStaticPaths() {
  const articles = await getCollection('articles');
  return articles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

// Récupérer l'article depuis les props
const { article } = Astro.props;
const { Content } = await article.render();
---

<Layout title={`${article.data.title} - PetiKVX`} description={article.data.description}>
  <article class="relative bg-gradient-to-br from-gray-900 to-black text-white min-h-screen">
    <!-- Animated grid background -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(0, 255, 0, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 0, 0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <div class="relative container mx-auto px-4 py-16">
      <!-- Article Header -->
      <header class="max-w-4xl mx-auto mb-12">
        <div class="mb-6">
          <span class="inline-block px-4 py-2 bg-green-500/20 border border-green-500/30 rounded-full text-green-400 font-mono text-sm mb-4">
            {article.data.category}
          </span>
        </div>

        <h1 class="text-4xl md:text-5xl font-bold mb-6 font-mono leading-tight">
          {article.data.title}
        </h1>

        <p class="text-xl text-gray-300 mb-8 font-mono leading-relaxed">
          {article.data.description}
        </p>

        <div class="flex flex-wrap items-center gap-6 text-sm text-gray-400 font-mono">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            {article.data.author}
          </div>

          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            {new Date(article.data.pubDate).toLocaleDateString('fr-FR', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </div>

          {article.data.tags && (
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              {article.data.tags.join(', ')}
            </div>
          )}
        </div>
      </header>

      <!-- Article Content -->
      <div class="max-w-4xl mx-auto">
        <div class="bg-gradient-to-br from-gray-800 to-gray-900 border border-green-500/20 rounded-lg p-8 md:p-12 shadow-2xl prose prose-invert prose-green max-w-none">
          <Content />
        </div>
      </div>

      <!-- Navigation -->
      <nav class="max-w-4xl mx-auto mt-12">
        <div class="flex justify-between items-center">
          <a href="/my-new-site/articles/" class="bg-gradient-to-r from-green-500 to-blue-500 text-black px-6 py-3 rounded-lg font-bold hover:from-green-400 hover:to-blue-400 transition-all duration-300 transform hover:scale-105 shadow-lg shadow-green-500/30 font-mono">
            ← RETOUR AUX ARTICLES
          </a>

          <div class="text-gray-400 font-mono text-sm">
            Article • {article.data.category}
          </div>
        </div>
      </nav>
    </div>
  </article>
</Layout>

<style>
  /* Styles pour le contenu Markdown */
  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    color: #22c55e;
    font-family: 'JetBrains Mono', monospace;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose p {
    color: #d1d5db;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .prose code {
    background-color: #1f2937;
    color: #22c55e;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  .prose pre {
    background-color: #111827;
    border: 1px solid rgba(34, 197, 94, 0.2);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose pre code {
    background: none;
    padding: 0;
    color: #10b981;
  }

  .prose ul, .prose ol {
    color: #d1d5db;
    margin: 1.5rem 0;
  }

  .prose li {
    margin: 0.5rem 0;
  }

  .prose strong {
    color: #22c55e;
    font-weight: 700;
  }

  .prose a {
    color: #3b82f6;
    text-decoration: underline;
  }

  .prose a:hover {
    color: #22c55e;
  }

  .prose blockquote {
    border-left: 4px solid #22c55e;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #9ca3af;
  }
</style>