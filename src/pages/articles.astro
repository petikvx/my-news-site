---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Récupérer tous les articles triés par date (plus récent en premier)
const articles = await getCollection('articles');
const sortedArticles = articles.sort((a: any, b: any) =>
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

// Obtenir les catégories uniques
const categories = [...new Set(articles.map((article: any) => article.data.category))];
---

<Layout title="Articles - PetiKVX" description="Découvrez mes analyses de cybersécurité, outils open source et recherches sur les menaces informatiques.">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white py-20 overflow-hidden">
    <!-- Animated grid background -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(0, 255, 0, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 0, 0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <div class="relative container mx-auto px-4 text-center">
      <div class="mb-6">
        <span class="inline-block px-4 py-2 bg-green-500/20 border border-green-500/30 rounded-full text-green-400 font-mono text-sm mb-4">
          CYBERSECURITY RESEARCH
        </span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-6 font-mono">
        ARTICLES & ANALYSES
      </h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto font-mono leading-relaxed">
        Explorations techniques, analyses de menaces et outils open source pour comprendre et combattre les cyberattaques.
      </p>
    </div>
  </section>

  <!-- Articles Section -->
  <section class="py-16 bg-gradient-to-br from-gray-800 to-gray-900 relative overflow-hidden">
    <!-- Background grid -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(0, 255, 0, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 0, 0.1) 1px, transparent 1px); background-size: 30px 30px;"></div>
    </div>

    <div class="relative container mx-auto px-4">
      <!-- Articles Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="articles-grid">
        {sortedArticles.map((article: any) => (
          <article class="group bg-gradient-to-br from-gray-800 to-gray-900 border border-green-500/20 rounded-lg overflow-hidden hover:border-green-400/50 transition-all duration-300 transform hover:-translate-y-2 hover:shadow-2xl hover:shadow-green-500/10">
            <div class="h-48 bg-gradient-to-r from-green-500/20 to-blue-500/20 flex items-center justify-center border-b border-green-500/20">
              <div class="text-center">
                <div class="w-16 h-16 bg-gradient-to-r from-green-400 to-blue-500 rounded-lg flex items-center justify-center mb-2 mx-auto">
                  <span class="text-black font-bold text-xl">
                    {article.data.category.charAt(0)}
                  </span>
                </div>
                <span class="text-green-400 font-mono text-sm font-bold">
                  {article.data.category.toUpperCase()}
                </span>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center mb-3">
                <span class="bg-green-500/20 border border-green-500/30 text-green-400 text-xs font-medium px-2.5 py-0.5 rounded font-mono">
                  {article.data.category}
                </span>
                <span class="text-gray-500 text-sm ml-auto font-mono">
                  {new Date(article.data.pubDate).toLocaleDateString('fr-FR', {
                    month: 'short',
                    day: 'numeric'
                  })}
                </span>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-white hover:text-green-400 transition-colors font-mono">
                <a href={`/my-new-site/articles/${article.slug}`}>
                  {article.data.title}
                </a>
              </h3>
              <p class="text-gray-400 mb-4 font-mono text-sm line-clamp-3">
                {article.data.description}
              </p>
              <div class="flex items-center justify-between">
                <a href={`/my-new-site/articles/${article.slug}`} class="text-green-400 font-medium hover:text-green-300 transition-colors font-mono text-sm">
                  LIRE L'ARTICLE →
                </a>
                <span class="text-gray-500 font-mono text-xs">
                  {article.data.author}
                </span>
              </div>
            </div>
          </article>
        ))}
      </div>

      {articles.length === 0 && (
        <div class="text-center py-16">
          <div class="w-24 h-24 bg-gradient-to-r from-green-400 to-blue-500 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-12 h-12 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4 font-mono">AUCUN ARTICLE</h3>
          <p class="text-gray-400 font-mono">Les articles seront bientôt disponibles.</p>
        </div>
      )}
    </div>
  </section>
</Layout>