        </div>
      )}
    </div>
  </section>
</Layout>

<script>
  // Filtrage des articles par catégorie
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const allButton = document.getElementById('filter-all') as HTMLButtonElement | null;
    const articleCards = document.querySelectorAll('.article-card');

    function filterArticles(category: string) {
      articleCards.forEach(card => {
        const cardElement = card as HTMLElement;
        const cardCategory = cardElement.dataset.category;
        if (category === 'all' || cardCategory === category) {
          cardElement.style.display = 'block';
        } else {
          cardElement.style.display = 'none';
        }
      });
    }

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const buttonElement = button as HTMLButtonElement;
        const category = buttonElement.dataset.category || '';
        filterArticles(category);

        // Mise à jour des styles des boutons
        filterButtons.forEach(btn => {
          const btnElement = btn as HTMLButtonElement;
          btnElement.classList.remove('bg-green-500/20', 'text-green-400');
          btnElement.classList.add('bg-gray-700', 'text-gray-300');
        });
        buttonElement.classList.remove('bg-gray-700', 'text-gray-300');
        buttonElement.classList.add('bg-green-500/20', 'text-green-400');

        if (allButton) {
          allButton.classList.remove('bg-gradient-to-r', 'from-green-500', 'to-blue-500', 'text-black');
          allButton.classList.add('bg-gray-700', 'text-gray-300');
        }
      });
    });

    if (allButton) {
      allButton.addEventListener('click', () => {
        filterArticles('all');

        // Reset des boutons de filtre
        filterButtons.forEach(btn => {
          const btnElement = btn as HTMLButtonElement;
          btnElement.classList.remove('bg-green-500/20', 'text-green-400');
          btnElement.classList.add('bg-gray-700', 'text-gray-300');
        });

        allButton.classList.remove('bg-gray-700', 'text-gray-300');
        allButton.classList.add('bg-gradient-to-r', 'from-green-500', 'to-blue-500', 'text-black');
      });
    }
  });
</script>
